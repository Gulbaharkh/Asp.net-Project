@model Teacher
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Teacher</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                        <textarea asp-for="Name" id="editor"></textarea>
                    </div>
                    <div class="form-group">
                        @*<input asp-for="TeacherDetails.AboutMe" class="form-control" id="exampleInputName1" placeholder="Name">*@
                        <span class="text-danger" asp-validation-for="TeacherDetails.AboutMe"></span>
                        <textarea asp-for="TeacherDetails.AboutMe"></textarea>
                        <label asp-for="TeacherDetails.AboutMe">About Me</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Degree" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Degree"></span>
                        <textarea asp-for="TeacherDetails.Degree" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Degree">Degree</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Experience" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Experience"></span>
                        <textarea asp-for="TeacherDetails.Experience" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Experience">Experience</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Hobbies" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Hobbies"></span>
                        <textarea asp-for="TeacherDetails.Hobbies" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Hobbies">Hobbies</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Faculty" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Faculty"></span>
                        <textarea asp-for="TeacherDetails.Faculty" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Faculty">Faculty</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.MailMe" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.MailMe"></span>
                        <textarea asp-for="TeacherDetails.MailMe" id="editor"></textarea>
                        <label asp-for="TeacherDetails.MailMe">Mail Me</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.CallMe" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.CallMe"></span>
                        <textarea asp-for="TeacherDetails.CallMe" id="editor"></textarea>
                        <label asp-for="TeacherDetails.CallMe">Call Me</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Skype" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Skype"></span>
                        <textarea asp-for="TeacherDetails.Skype" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Skype">Skype</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Language" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Language"></span>
                        <textarea asp-for="TeacherDetails.Language" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Language">Language</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.TeamLeader" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.TeamLeader"></span>
                        <textarea asp-for="TeacherDetails.TeamLeader" id="editor"></textarea>
                        <label asp-for="TeacherDetails.TeamLeader">Team leader</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Development" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Development"></span>
                        <textarea asp-for="TeacherDetails.Development" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Development">Development</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Design" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Design"></span>
                        <textarea asp-for="TeacherDetails.Design" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Design">Design</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Innovation" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Innovation"></span>
                        <textarea asp-for="TeacherDetails.Innovation" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Innovation">Innovation</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="TeacherDetails.Communication" class="form-control" id="editor" placeholder="Name">
                        <span class="text-danger" asp-validation-for="TeacherDetails.Communication"></span>
                        <textarea asp-for="TeacherDetails.Communication" id="editor"></textarea>
                        <label asp-for="TeacherDetails.Communication">Communication</label>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{
    <partial name="_ValidationPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/27.0.0/classic/ckeditor.js"></script>
    <script>
       ClassicEditor
           .create(document.querySelector('#editor'))
           .catch(error => {
               console.error(error);
           });
    </script>
}