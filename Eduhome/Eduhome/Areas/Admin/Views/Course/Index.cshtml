
@{
    ViewData["Title"] = "Course";
    List<Caption> courses = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Course</h4>
                <a asp-controller="Course" asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Price
                                </th>
                                <th>
                                    StartTime
                                </th>
                                <th>
                                    Setting
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                                @foreach (Caption item in courses)
                                {
                            <tr>

                                <td>
                                    <img src="~/front/img/course/@item.Image" alt="Alternate Text" />
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.CourseDetails.CourseFee
                                </td>
                                <td>
                                    @*@item.CourseDetails.Start.ToString("d")*@
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@item.Id">
                                        <i class="mdi mdi-account-card-details"></i>
                                    </a>
                                    <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">
                                        <i class="mdi mdi-table-edit"></i>
                                    </a>
                                    <a class="btn btn-warning " asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="mdi mdi-delete-sweep"></i>
                                    </a>
                                </td>
                            </tr>
                                }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

