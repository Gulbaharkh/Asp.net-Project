@model Caption
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create</h4>

                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Name</label>
                        <input asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Title"></span>
                        <textarea asp-for="Title" id="editor"></textarea>
                    </div>
                    <div class="form-group">
                        <input asp-for="CourseDetails.CourseFee" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="CourseDetails.CourseFee"></span>
                        <textarea asp-for="CourseDetails.CourseFee" id="editor"></textarea>
                        <label asp-for="CourseDetails.CourseFee">Price</label>

                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-light" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{

    <partial name="_ValidationPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/27.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor.create(document.querySelector('#editor')).catch(error => {console.error(error);});
    </script>
}